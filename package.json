{
  "name": "automated-photo-stamp-tool",
  "version": "1.0.0",
  "description": "一键给你的照片添加水印的桌面应用",
  "main": "dist-electron/main.js",
  "author": "Kerwin Wang",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build:electron && concurrently \"npm run dev:react\" \"wait-on http://localhost:3000 && npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "tsc -p electron",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@types/react-window": "^1.8.8",
    "electron-store": "^8.1.0",
    "exifr": "^7.1.3",
    "react-icons": "^5.5.0",
    "react-window": "^1.8.11",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.kerwin.photo-stamp-tool",
    "productName": "照片水印工具",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.photography"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
